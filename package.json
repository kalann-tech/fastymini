{
  "name": "fastymini-framework",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "version": "1.0.0",
  "description": "A fast and lightweight framework for building web applications",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/node": "^24.10.0",
    "conventional-changelog-atom": "^5.0.0",
    "lefthook": "^1.13.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build:create": "yarn workspace create-fastymini-app build",
    "dev:create": "yarn workspace create-fastymini-app dev",
    "lint:create": "yarn workspace create-fastymini-app lint",
    "sync-templates": "yarn workspace create-fastymini-app sync-templates",
    "rename-template": "yarn workspace create-fastymini-app rename",
    "restore-template": "yarn workspace create-fastymini-app restore"
  }
}
